<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	
	<bean id="person" class="study.ex3.Person">
		<constructor-arg value="장원영"></constructor-arg>
		<property name="phone" value="010-0000-0000"></property>
	</bean>
	
	<bean id="mycart" class="study.ex3.MyCart" scope="singleton"><!-- 생략 시 singleton -->
		<constructor-arg value="아메리카노"></constructor-arg>
		<constructor-arg value="1500"></constructor-arg>
		<property name="person" ref="person"></property>
	</bean>
	
</beans>
